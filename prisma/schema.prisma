generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int         @id @default(autoincrement())
  name              String
  email             String      @unique
  password          String
  role              String
  failed_attempt    Int         @default(0)
  blocked_account   String      @default("N")
  fecha_registro    DateTime    @default(now())

}
