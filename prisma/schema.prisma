generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  vigilant
  resident
}

model User {
  id                Int         @id @default(autoincrement())
  name              String
  email             String      @unique
  password          String
  role              Role        
  failed_attempt    Int         @default(0)
  blocked_account   String      @default("N")
  fecha_registro    DateTime    @default(now())
}
